<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.0" client="site" method="upgrade">
    <name>Rectangular Image Module</name>
    <author>GA Compa</author>
    <version>1.0.0</version>
	<creationDate>2025-03-26</creationDate>
    <description>Displays n random images from a folder in a rectangular layout.</description>
	<copyright>(C) 2025 Alizarina</copyright>
	<authorEmail>gacompa@gmail.com</authorEmail>
	<authorUrl>www.alizarina.eu</authorUrl>
    <files>
        <filename module="mod_rectangularimages">mod_rectangularimages.php</filename>
        <filename>helper.php</filename>
        <folder>tmpl</folder>
    </files>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field name="image_folder" type="folderlist" directory="images" default="/images/grid_homepage" label="Image Folder" description="Select the folder containing images." />
                <field name="image_count" type="text" default="6" label="Number of Images" description="Number of random images to display." />
                <field name="row_height" type="text" default="400" label="Height of row" description="Height of each images row." />
            </fieldset>
        </fields>
    </config>
</extension>



